\define title-tolowercase()
<$vars curTitle=<<currentTiddler>> newTitle={{{[<currentTiddler>lowercase[]]}}}>
<$list filter="[<curTitle>!match<newTitle>]" variable=null>
<$action-setfield $tiddler=<<currentTiddler>> title=<<newTitle>> /> <!-- CREATES NEW TIDDLER -->
<$action-deletetiddler $tiddler=<<currentTiddler>> /> <!-- REMOVES OLD TIDDLER --> 
</$list>
</$vars>
\end

\define tag-entries()
<!-- change entry type to lower case -->
<$action-setfield $tiddler=<<currentTiddler>> bibtex-entry-type={{{[<currentTiddler>get[bibtex-entry-type]lowercase[]]}}} />
<!-- add bibtex-entry -->
<$fieldmangler>
<$action-sendmessage $message="tm-add-tag" $param="bibtex-entry" />
</$fieldmangler>
\end

\define process-entries()
<$button> Process New Bibtex Entries
<$list filter="[has[bibtex-title]]">
<<tag-entries>>
<<title-tolowercase>>
</$list>
</$button>
\end